<mvc:View controllerName="com.globant.customers.controller.Orders"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="_IDGenVBox2">
                <Table
                    id="idOrdersTable"
                    inset="false"
                    items="{ path: 'Orders>/'}">
                    <columns>
                        <Column id="_IDGenColumn1" width="12em">
                            <Text id="_IDGenText5" text="Ordenes" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Navigation" press=".onPress">
                            <cells>
                                <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{Orders>OrderID}" text="{Orders>ShipAddress}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

            </VBox>
            
        </content>
    </Page>
</mvc:View>
